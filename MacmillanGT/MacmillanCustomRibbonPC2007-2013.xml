<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<!-- Custom Ribbon XML added using Custom UI Editor for Microsoft Office -->
<!-- Available here: http://openxmldeveloper.org/blog/b/openxmldeveloper/archive/2009/08/07/7293.aspx -->
<!-- RibbonControl is a VBA module in same template as this customUI.xml code -->
<!-- NOTE! Add images for BOTH PC (transparent) and Mac (gray background) here-->

<customUI xmlns="http://schemas.microsoft.com/office/2006/01/customui" onLoad="RibbonControl.Onload">
	<ribbon>
		<tabs>
			<tab id="CustomTab1" label="Macmillan Tools" insertAfterMso="TabHome">
				<group id="CustGrp1" label="Macmillan Styles" >
					<button id="MacmillanGT.AttachTemplateMacro.zz_AttachStyleTemplate" label="Add Manuscript Styles" image="addfile" size="large" onAction="RibbonControl.LaunchMacros" />
					<button id="MacmillanGT.AttachTemplateMacro.zz_AttachBoundMSTemplate" label="Remove Color Guides" image="removefile" size="large" onAction="RibbonControl.LaunchMacros" />	
					<button id="MacmillanGT.AttachTemplateMacro.zz_AttachCoverTemplate" label="Add Cover Copy Styles" image="book" size="normal" onAction="RibbonControl.LaunchMacros" />
					<button id="MacmillanGT.PrintStyles.PrintStyles" label="Print Styles in Margin" image="print" size="normal" onAction="RibbonControl.LaunchMacros" />
					<button id="MacmillanGT.ViewStyles.StylesViewLaunch" size="normal" image="eye" onAction="RibbonControl.LaunchMacros" label="View Styles"/>
				</group>
				<group id="CustGrp2" label="Manuscript Tools" >
					<button id="MacmillanGT.CastoffMacro.UniversalCastoff" label="Castoff" image="calculator" size="large" onAction="RibbonControl.LaunchMacros" />
					<button id="MacmillanGT.Endnotes.EndnoteDeEmbed" label="Unlink Endnotes" image="unlink" size="large" onAction="RibbonControl.LaunchMacros" />
					<button id="MacmillanGT.CleanupMacro.MacmillanManuscriptCleanup" label="Manuscript Cleanup" image="wineglass" size="large" onAction="RibbonControl.LaunchMacros" />
				</group>
				<group id="CustGrp3" label="Style Tools" >
					<button id="MacmillanGT.CharacterStyles.MacmillanCharStyles" label="Tag Character Styles" image="tag" size="large" onAction="RibbonControl.LaunchMacros" />
					<button id="MacmillanGT.TagText.TagText" label="Tag Standard Text" image="tag" size="large" onAction="RibbonControl.LaunchMacros" />
					<button id="MacmillanGT.Reports.MacmillanStyleReport" label="Style Report" image="file" size="normal" onAction="RibbonControl.LaunchMacros" />
					<button id="MacmillanGT.Reports.BookmakerReqs" label="Bookmaker Check" image="checkfile" size="normal" onAction="RibbonControl.LaunchMacros" />
					<button id="MacmillanGT.LOCtagsMacro.LibraryOfCongressTags" label="CIP Application" image="index" size="normal" onAction="RibbonControl.LaunchMacros" />
				</group>
				<group id="CustGrp4" label="Help" >
					<button id="MacmillanGT.VersionCheck.CheckMacmillanGT" label="Macmillan Tools Version" image="info" size="normal" onAction="RibbonControl.LaunchMacros" />
					<button id="MacmillanGT.VersionCheck.CheckMacmillan" label="Macmillan Styles Version" image="info" size="normal" onAction="RibbonControl.LaunchMacros" />
					<button id="MacmillanGT.EasterEggs.Triceratops" image="pizza" size="normal" onAction="RibbonControl.LaunchMacros" />
				</group>
			</tab>
		</tabs>
	</ribbon>
</customUI>