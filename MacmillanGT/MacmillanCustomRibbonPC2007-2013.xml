<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<!-- Custom Ribbon XML added using Custom UI Editor for Microsoft Office -->
<!-- Available here: http://openxmldeveloper.org/blog/b/openxmldeveloper/archive/2009/08/07/7293.aspx -->
<!-- RibbonControl is a VBA module in same template as this ribbon.xml code -->

<customUI xmlns="http://schemas.microsoft.com/office/2006/01/customui" onLoad="RibbonControl.Onload">
	<ribbon>
		<tabs>
			<tab id="CustomTab1" label="Macmillan Tools" insertAfterMso="TabHome">
				<group id="CustGrp1" label="Macmillan Styles" >
					<button id="BtnAttachTemplate" label="Add Manuscript Styles" image="_0012_add-manuscript-styles---addfile" size="large" onAction="RibbonControl.LaunchMacros" />
					<button id="BtnRemoveColor" label="Remove Color Guides" image="_0011_remove-color-guides---removefile" size="large" onAction="RibbonControl.LaunchMacros" />	
					<button id="BtnCoverCopy" label="Add Cover Copy Styles" image="_0003_add-cover-copy-styles---book" size="normal" onAction="RibbonControl.LaunchMacros" />
					<button id="BtnPrintStyles" label="Print Styles in Margin" image="_0006_print-styles---print" size="normal" onAction="RibbonControl.LaunchMacros" />
					<button id="BtnViewStyles" size="normal" image="_0001_view-styles---eye" onAction="RibbonControl.LaunchMacros" label="View Styles"/>
				</group>
				<group id="CustGrp2" label="Manuscript Tools" >
					<button id="BtnCastoff" label="Castoff" image="_0013_castoff---calculator" size="large" onAction="RibbonControl.LaunchMacros" />
					<button id="BtnEndnotes" label="Unlink Endnotes" image="_0007_de-embed-endnotes---unlink" size="large" onAction="RibbonControl.LaunchMacros" />
					<button id="BtnCleanup" label="Manuscript Cleanup" image="_0005_manuscript-cleanup---wineglass" size="large" onAction="RibbonControl.LaunchMacros" />
				</group>
				<group id="CustGrp3" label="Style Tools" >
					<button id="BtnCharStyles" label="Tag Character Styles" image="_0002_character-styles---tag" size="large" onAction="RibbonControl.LaunchMacros" />
					<button id="BtnStyleReport" label="Style Report" image="_0004_style-report---file" size="normal" onAction="RibbonControl.LaunchMacros" />
					<button id="BtnBkmkrCheck" label="Bookmaker Check" image="_0008_bookmaker-requirements---checkfile" size="normal" onAction="RibbonControl.LaunchMacros" />
					<button id="BtnLocTags" label="CIP Application" image="_0010_CIP-application-tags---index" size="normal" onAction="RibbonControl.LaunchMacros" />
				</group>
				<group id="CustGrp4" label="Help" >
					<button id="BtnGtVersion" label="Macmillan Tools Version" image="_0009_-check-macros_styles-version---info" size="normal" onAction="RibbonControl.LaunchMacros" />
					<button id="BtnStyleVersion" label="Macmillan Styles Version" image="_0009_-check-macros_styles-version---info" size="normal" onAction="RibbonControl.LaunchMacros" />
					<button id="BtnTriceratops" image="_0000_insert-ASCII-triceratops---pizza" size="normal" onAction="RibbonControl.LaunchMacros" />
				</group>
			</tab>
		</tabs>
	</ribbon>
</customUI>